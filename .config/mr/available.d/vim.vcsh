[$HOME/.config/vcsh/repo.d/vim.git]
checkout = vcsh clone -b vim https://github.com/zubieta/dotfiles.git vim
post_checkout =
    test -f ~/.vimrc && ! test -L ~/.vimrc && mv -f ~/.vimrc ~/.vimrc.bak
    test -d ~/.vim.d && ! test -L ~/.vim.d && mv -f ~/.vim.d ~/.vim.d.bak
    ln -sf .config/nvim/init.vim ~/.vimrc
    ln -sf .config/nvim ~/.vim.d
